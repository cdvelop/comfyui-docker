{
    // A vertical ruler in the code editor at 150 characters, this is a visual aide to help users keep the 150 character line limit file files that
    // warrant a line limit
    "editor.rulers": [150],

    // Inserts a final new line at the end of a file and trims trailing white spaces from all lines in the code editor when saving
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    // Specifies the file types for files that are incorrectly detected by Visual Studio Code, for example, the LICENSE file is detected as a Markdown
    // file, but it is actually a plain text file, which causes the Markdown linter to complain about the file
    "files.associations": {
        "LICENSE": "plaintext"
    },

    // A list of files that are not displayed in the file explorer of Visual Studio Code
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/bin": true,
        "**/obj": true,
        "**/Thumbs.db": true
    },

    // ...existing code...
}
